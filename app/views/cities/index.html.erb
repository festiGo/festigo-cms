<%- model_class = City -%>
<ul class="breadcrumb">
  <li><%= link_to t('home.title'), home_path %> <span class="divider">/</span></li>
  <li class="active"><%= t(:'navbar.cities') %></li>
  <% if can? :create, City %>
    <li class="pull-right"><%= link_to t('.add_city'), new_city_path, :class => "add-city btn btn-mini btn-success pull-right" %></li>

  <% end %>
</ul>

<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:name) %></th>
    <th><%= model_class.human_attribute_name(:state_province) %></th>
    <th><%= model_class.human_attribute_name(:country_code) %></th>
    <th></th>

  </tr>
  </thead>
  <% @cities.each do |city| %>
    <tr>
      <td><%= city.name %></td>
      <td><%= city.state_province %></td>
      <td><%= city.country_code %></td>
      <td>
        <%= link_to t('actions.view_details'), city_path(city), :class => "btn btn-mini" %>

        <% if current_user.is_admin? %>
          <%= link_to t('actions.edit', name: model_class.model_name), edit_city_path(city), :class => "btn btn-mini btn-primary" %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

<br/>

